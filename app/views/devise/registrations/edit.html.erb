<div id="circle-coral">
<br>
<br>
<div class="container">
<div class="container mt-3 text-center">
  <h2 class="mb-4">Modifie ton profil <%= @user.nickname %></h2>
    </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, input_html: {class: "custom-text-field" } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>En attente de confirmation : <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Laisse vide si tu ne veux pas changer ton mot de passe",
                  label: "Nouveau mot de passe",
                  required: false,
                  input_html: { autocomplete: "new-password", class: "custom-text-field" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  label: "Confirmation du nouveau mot de passe",
                  input_html: { autocomplete: "new-password", class: "custom-text-field" } %>
      <%= f.input :current_password,
                  :label => 'Mot de passe actuel',
                  hint: "Il nous faut ton mot de passe actuel pour confirmer les changements",
                  required: true,
                  input_html: { autocomplete: "current-password", class: "custom-text-field" } %>
      <%= f.input :first_name,
                  :label => 'PrÃ©nom',
                  required: false,
                  input_html: { class: "custom-text-field" } %>
      <%= f.input :last_name,
                  :label => 'Nom',
                  required: false,
                  input_html: { class: "custom-text-field" } %>
      <%= f.input :nickname,
                  :label => 'Pseudo',
                  required: false,
                  input_html: { class: "custom-text-field" } %>
      <%= f.input :address,
                  :label => 'Ville',
                  required: false,
                  input_html: { class: "custom-text-field" } %>
      <%= f.input :description,
                  :label => 'Description',
                  hint: "Explique-nous pourquoi tu es inscrit(e) sur ParkBuddies",
                  input_html: { class: "custom-text-field" }
                  %>
    </div>

    <div class="form-actions">
    <div class="container mt-3 text-center">
      <%= f.button :submit, "Update", class:"btn-corail" %>
    </div>
    </div>
  <% end %>

  <%= link_to :back do %>
    <i class="fa-solid fa-rotate-left fa-lg" style="color: #7f7f7f;"></i>
  <% end %>

  <div>Envie de quitter ParkBuddies ? <%= link_to "Supprimer mon compte", cancel_user_registration_path(resource_name), data: { confirm: "Certain(e)?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

</div>
