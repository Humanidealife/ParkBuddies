<div class="container mt-3 text-center">
<%= image_tag("https://res.cloudinary.com/dd6jjbnqk/image/upload/v1702043714/BP_Logos/Logo_3_svg_transp/PB_Logo_Full_Inline_Color_qripy8.svg", width: 400, height: 150) %></div>
<div class="container card-wrap">
  <div style="width: 100%; height: 300px; p-20" class="formatmap"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
  <br>
<div class="container">
    <% @parks.each do | park | %>
      <%= link_to park_path(park), class:"text-decoration-none", style:"color: inherit" do %>
        <div class="card-park">
          <%= cl_image_tag park.photo.key %>
          <div class="card-park-infos">
            <h5 class="card-title"><%= park.name %></h5>
            <p> <%= truncate(park.description, length:100) %></p>
            </div>
        </div>
      <% end %>
      <% end %>
</div>
